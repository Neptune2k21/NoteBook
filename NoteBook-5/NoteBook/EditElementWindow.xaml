<Window x:Class="NoteBook.EditElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="Edit Element" Height="217.925" Width="412.264">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="Name :" VerticalAlignment="Center" />
        <TextBox x:Name="name" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10" />
        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Coef:" VerticalAlignment="Center" />
        <TextBox x:Name="coef" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10" />
        <Button Content="Validate" Margin="10" Click="Validate" Grid.ColumnSpan="2" Grid.Row="2" />
    </Grid>
</Window>
