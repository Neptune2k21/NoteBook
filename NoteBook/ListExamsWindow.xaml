<Window x:Class="NoteBook.ListExamsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="ListExamsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ExamDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Module" Binding="{Binding Module.Name}" Width="200" />


                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="100" />

                <DataGridTextColumn Header="Coefficient" Binding="{Binding Coefficient}" Width="100" />
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="150" />
                <DataGridCheckBoxColumn Header="Absent" Binding="{Binding IsAbsent}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
