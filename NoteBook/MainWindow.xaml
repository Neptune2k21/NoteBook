<Window x:Class="NoteBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Carnet de Notes" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Carnet de Notes" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Name="EditUnitsButton" Content="Editer les unités" Width="200" Height="50" FontSize="16" FontWeight="Bold" Click="GoEditUnits" Margin="0,0,0,10"/>
            <Button Name="CreateExamButton" Content="Créer un examen" Width="200" Height="50" FontSize="16" FontWeight="Bold" Click="GoCreateExam" Margin="0,0,0,10"/>
            <Button Content="Afficher les Examens" Width="200" Height="50" FontSize="16" FontWeight="Bold" Click="GoListExams" Margin="0,0,0,10"/>

            <Button Name="CloseButton" Content="Fermer" Width="200" Height="50" FontSize="16" FontWeight="Bold" Click="CloseWindow" Margin="0,20,0,0" Background="Red" Foreground="White" BorderBrush="Red"/>
        </StackPanel>
    </Grid>
</Window>
