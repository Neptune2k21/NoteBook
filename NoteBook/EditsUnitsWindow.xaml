<Window x:Class="NoteBook.EditUnitsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="Edit Units" Height="500" Width="900">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <Label Content="Liste des unités d'enseignement:" FontWeight="Bold" FontSize="16"/>
            <ListBox Name="unitsList" Height="250" Width="400" Margin="0,10"/>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10">
                <Button Name="AddUnitButton" Content="Ajouter une unité"  Click="AddUnit" Width="150" Height="30" Margin="5"/>
                <Button Name="RemoveUnitButton" Content="Supprimer une unité" Click="RemoveUnit" Width="150" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10">
            <Label Content="Liste des modules de l'unité sélectionnée:" FontWeight="Bold" FontSize="16"/>
            <ListBox Name="modulesList" Height="250" Width="400" Margin="0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10">
                <Button Name="AddModuleButton" Content="Ajouter un module" Width="150" Height="30" Margin="5"/>
                <Button Name="RemoveModuleButton" Content="Supprimer un module" Width="150" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
