<Window x:Class="NoteBook.EditUnitsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="Edit Units" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Liste des unités:" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Margin="10"/>
        <ListBox Name="unitsList" Grid.Row="0" Height="250" Width="400" HorizontalAlignment="Left" Margin="10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
            <Button Name="AddButton" Content="Ajouter une unité" Width="150" Height="30" Click="AddUnit" Margin="5"/>
            <Button Name="RemoveButton" Content="Supprimer une unité" Width="150" Height="30" Click="RemoveUnit" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
