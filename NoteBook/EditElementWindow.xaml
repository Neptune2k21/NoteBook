<Window x:Class="NoteBook.EditElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBook"
        mc:Ignorable="d"
        Title="Modifier une unité" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Nom :" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox Name="name" Width="200" Grid.Row="0" HorizontalAlignment="Left" Margin="100,0,0,0"/>

        <Label Content="Coefficient :" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Name="coef" Width="200" Grid.Row="1" HorizontalAlignment="Left" Margin="100,0,0,0"/>

        <Button Name="ValidateButton" Content="Valider" Width="100" Height="30" Grid.Row="3" HorizontalAlignment="Center" Margin="5" Click="Validate"/>
    </Grid>
</Window>
