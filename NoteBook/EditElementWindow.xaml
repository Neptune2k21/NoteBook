<Window x:Class="NoteBook.EditElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier une unité" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Nom :" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox Name="name" Width="200" Grid.Row="0" HorizontalAlignment="Left" Margin="100,0,0,0"/>

        <Label Content="Coefficient :" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Name="coef" Width="200" Grid.Row="1" HorizontalAlignment="Left" Margin="100,0,0,0"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Name="ValidateButton" Content="Valider" Width="100" Height="30" Click="Validate" Background="Green" Foreground="White" Margin="10"/>
            <Button Name="CloseButton" Content="Fermer" Width="100" Height="30" Click="CloseWindow" Background="Red" Foreground="White" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
